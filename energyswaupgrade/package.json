{
  "name": "hardhat-template",
  "version": "0.0.1",
  "description": "Template for writing, compiling, testing, and deploying Solidity smart contracts.",
  "scripts": {
    "clean": "rimraf ./cache && rimraf ./artifacts",
    "compile": "yarn clean && hardhat compile",
    "coverage": "yarn compile && hardhat coverage --temp artifacts",
    "deploy": "hardhat run scripts/deploy.ts",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "test": "hardhat test test/*.ts",
    "test-clean": "yarn clean && yarn test",
    "test-fast": "TS_NODE_TRANSPILE_ONLY=1 hardhat test test/*.ts",
    "typechain": "hardhat typechain",
    "helpers": "utils/helpers.ts",
    "dev": "lite-server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "David Josephs",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "chai-bignumber": "^3.0.0",
    
  
    "chai-bn": "^0.2.1",
    
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.4.7",
    "hardhat": "^2.1.2",
    "hardhat-deploy": "^0.9.1",
    "hardhat-deploy-ethers": "*",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solidity-coverage": "^0.7.13",
    "truffle-assertions": "^0.9.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "web3": "^1.2.9"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@chainlink/test-helpers": "0.0.5",
    "@chainlink/token": "^1.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.2",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "assertion": "^1.3.35",
    "babel-eslint": "^10.1.0",
    "base64-sol": "^1.0.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.22.0",
    "eth-crypto": "^1.9.0",
    "fs-extra": "^7.0.1",
    
    "solc": "^0.8.2",
    "transform": "^1.1.2",
    "typechain": "^5.1.2"
  }
}
